<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemFoodLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:elevation="3dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imvPhotoFood"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:background="@drawable/background_cat"
        android:src="@drawable/lunch_com_tam_phuc_loc_tho" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtNameShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_bookmark_24"
            android:text="Shop Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNameFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cơm sườn"
            android:textColor="@color/gray_300"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtRatingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:drawableEnd="@drawable/baseline_star_24"
                android:text="4.7"
                android:textColor="@color/yellow_200"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtRatingcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/baseline_horizontal_rule_24"
                android:drawablePadding="12dp"
                android:text="(499+)"
                android:textColor="@color/black_200"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtdistanceShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/baseline_horizontal_rule_24"
                android:drawablePadding="12dp"
                android:text="0.6km"
                android:textColor="@color/black_200"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>