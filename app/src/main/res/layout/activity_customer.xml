            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bgforegn"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_cat"
                    android:elevation="3dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btnvoucher"
                        style="@style/ProfileMenuItem"
                        android:drawableStart="@drawable/baseline_wallet_24"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right"
                        android:text="@string/voucher" />

                    <TextView
                        android:id="@+id/btnshopeecoins"
                        style="@style/ProfileMenuItem"
                        android:drawableStart="@drawable/baseline_currency_exchange_24"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right"
                        android:text="@string/shopee_xu" />

                    <TextView
                        android:id="@+id/btnpayment"
                        style="@style/ProfileMenuItem"
                        android:drawableStart="@drawable/baseline_account_balance_wallet_24"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right"
                        android:text="@string/payment" />

                    <TextView
                        android:id="@+id/btnmyinfo"
                        style="@style/ProfileMenuItem"
                        android:drawableStart="@drawable/baseline_people_24"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right"
                        android:text="@string/myaddress" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_cat"
                    android:elevation="3dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btnsupport"
                        style="@style/ProfileMenuItem"
                        android:drawableStart="@drawable/baseline_question_mark_24"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right"
                        android:text="@string/support" />

                    <TextView
                        android:id="@+id/btnpolicy"
                        style="@style/ProfileMenuItem"
                        android:drawableStart="@drawable/baseline_local_police_24"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right"
                        android:text="@string/policy" />

                    <TextView
                        android:id="@+id/btnsetting"
                        style="@style/ProfileMenuItem"
                        android:drawableStart="@drawable/baseline_settings_24"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right"
                        android:text="@string/setting" />

                    <TextView
                        android:id="@+id/btnaboutme"
                        style="@style/ProfileMenuItem"
                        android:drawableStart="@drawable/baseline_food_bank_24"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right"
                        android:text="@string/aboutme" />
                </LinearLayout>

                <TextView
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/primary"
                    android:gravity="center"
                    android:text="@string/titlelogout"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/foregn"
        app:itemTextColor="@color/color_navigation"
        app:itemIconTint="@color/color_navigation"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_navigation"/>
</RelativeLayout>